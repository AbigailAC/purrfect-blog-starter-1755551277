@model IEnumerable<PurrfectBlog.Models.Post>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron text-center">
    <h1>Purrfect Blog</h1>
    <p class="lead">Your daily dose of feline fun, facts, and friendship. Welcome to our community of cat lovers!</p>
</div>

<div class="row">
    <h2 class="text-center mb-4">Recent Posts</h2>
    @if (!Model.Any())
    {
        <p class="text-center text-muted">No posts yet! Check back soon.</p>
    }
    else
    {
        foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text text-muted">
                            <small>By @post.Author.UserName on @post.CreationDate.ToShortDateString()</small>
                        </p>
                        <p class="card-text">
                            @{
                                var excerpt = post.Content.Length > 100 ? post.Content.Substring(0, 100) + "..." : post.Content;
                            }
                            @excerpt
                        </p>
                        <div class="mt-auto">
                            @Html.ActionLink("Read More →", "Details", "Post", new { id = post.Id }, new { @class = "btn btn-outline-primary" })
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>