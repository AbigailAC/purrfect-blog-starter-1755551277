@model IEnumerable<PurrfectBlog.Models.Post>

@{
    ViewBag.Title = "All Posts";
}

<div class="container">
    <div class="text-center my-4">
        <h1>@ViewBag.Title</h1>
        <p class="lead text-muted">Browse our collection of purrfect stories and tips.</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (!Model.Any())
    {
        <p class="text-center">No posts have been created yet. Be the first!</p>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h3 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h3>
                    <p class="card-subtitle mb-2 text-muted">
                        By @Html.DisplayFor(modelItem => item.Author.UserName) on @item.CreationDate.ToShortDateString()
                    </p>

                    <p class="card-text">
                        @{
                            var excerpt = item.Content.Length > 200 ? item.Content.Substring(0, 200) + "..." : item.Content;
                        }
                        @excerpt
                    </p>

                    @Html.ActionLink("Read More", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                </div>
            </div>
        }
    }
</div>